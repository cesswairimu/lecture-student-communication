<% provide(:title, "Login") %>
<div class="row">
    <div class="large-offset-3">
        <div class="medium-6">
            <%= form_for(:session, url: login_path) do |f| %>
                <h1>Login here</h1>
                <%= f.label :email%>
                <%= f.email_field :email %>
                <%= f.label :password %>
                <%= f.password_field :password %>
                 <%= f.label :remember_me  %> 
               <%= f.check_box :remember_me %>
                <%= f.submit "Login" %>
                <h5>Or Signup Here if you ain't here yet  <%= link_to "Signup", new_user_path %></h5>
                
            <% end %>
        </div>
    </div>
</div>

